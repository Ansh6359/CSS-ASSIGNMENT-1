  color: #7D775C;
}

/* Styling for unvisited links */
a:link {
  font-weight: bold;
  text-decoration: none;
  color: #B7A5DF;
}

/* Styling for visited links */
a:visited {
  font-weight: bold;
  text-decoration: none;
  color: #D4CDDC;
}

/* Styling for links on hover, focus, and active states */
a:hover,
a:focus,
a:active {
  text-decoration: underline;
  color: #9685BA;
}

/* Remove the default underline for abbreviations */
abbr {
  border-bottom: none;
}


